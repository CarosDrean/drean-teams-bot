{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "speak": "<s>Flight KL0605 to San Fransisco has been delayed.</s><s>It will not leave until 10:10 AM.</s>",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "size": "Small",
              "url": "https://adaptivecards.io/content/cats/3.png",
              "altText": "Airplane"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "Solicitud",
              "horizontalAlignment": "Right",
              "isSubtle": true,
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "Aprobada",
              "horizontalAlignment": "Right",
              "spacing": "None",
              "size": "Large",
              "color": "Default",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "separator": true,
      "spacing": "Medium",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "Equipos Seleccionados",
              "isSubtle": true,
              "weight": "Bolder",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "$data": "${selectedList}",
              "text": "${name} (${score})"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "Enviar Correo",
      "verb": "sendEmail",
      "style": "positive"
    }
  ]
}